<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fi0x.edct.controller.ControllerMain">
    <VBox alignment="CENTER">
        <children>
            <HBox alignment="CENTER">
                <children>
                    <VBox alignment="CENTER">
                        <children>
                            <TextField fx:id="quantity" promptText="Minimum quantity to trade" text="1000" />
                            <CheckBox id="carriers" fx:id="cbCarrier" mnemonicParsing="false" text="Include Fleet Carriers" />
                            <CheckBox id="surface" fx:id="cbSurface" mnemonicParsing="false" text="Include Surface Stations" />
                            <CheckBox fx:id="cbLandingPad" mnemonicParsing="false" text="Include small pads" />
                            <CheckBox fx:id="cbDemand" mnemonicParsing="false" selected="true" text="Allow 0 Demand" />
                        </children>
                    </VBox>
                    <Button id="start" fx:id="btnStart" alignment="CENTER" contentDisplay="CENTER" onMouseClicked="#calculate" text="Get best trades" textAlignment="CENTER" visible="false">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Button>
                </children>
            </HBox>
            <VBox alignment="CENTER">
                <children>
                    <HBox alignment="CENTER">
                        <children>
                            <Button mnemonicParsing="false" onAction="#previousCommodity" text="Previous Commodity" />
                            <Label fx:id="lblCommodity" text="Commodity" />
                            <Button mnemonicParsing="false" onAction="#nextCommodity" text="Next Commodity" />
                        </children>
                    </HBox>
                    <HBox alignment="CENTER">
                        <children>
                            <VBox alignment="CENTER">
                                <children>
                                    <Label text="Buy at">
                                    </Label>
                                    <Label fx:id="lblBuyStation" text="Station" />
                                    <Label fx:id="lblBuyPrice" text="Price" />
                                    <Label fx:id="lblSupply" text="Supply" />
                                    <HBox alignment="CENTER">
                                        <children>
                                            <Button mnemonicParsing="false" onAction="#previousBuyStation" text="Previous Station" />
                                            <Button mnemonicParsing="false" onAction="#nextBuyStation" text="Next Station" />
                                        </children>
                                    </HBox>
                                </children>
                            </VBox>
                            <VBox alignment="CENTER">
                                <children>
                                    <Label text="Sell at">
                                    </Label>
                                    <Label fx:id="lblSellStation" text="Station" />
                                    <Label fx:id="lblSellPrice" text="Price" />
                                    <Label fx:id="lblDemand" text="Demand" />
                                    <HBox alignment="CENTER">
                                        <children>
                                            <Button mnemonicParsing="false" onAction="#previousSellStation" text="Previous Station" />
                                            <Button mnemonicParsing="false" onAction="#nextSellStation" text="Next Station" />
                                        </children>
                                    </HBox>
                                </children>
                            </VBox>
                            <Label fx:id="lblProfit" text="Profit" />
                        </children>
                    </HBox>
                </children>
            </VBox>
        </children>
    </VBox>
    <stylesheets>
        <URL value="@../css/main.css" />
    </stylesheets>
</AnchorPane>
