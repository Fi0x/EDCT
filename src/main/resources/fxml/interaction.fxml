<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<HBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.fi0x.edct.controller.Interaction" alignment="CENTER">
    <children>
        <VBox fx:id="vbFilters" alignment="CENTER">
            <children>
                <TextField fx:id="quantity" promptText="Minimum quantity to trade" text="1000" />
                <CheckBox id="carriers" fx:id="cbCarrier" mnemonicParsing="false" text="Include Fleet Carriers" />
                <CheckBox id="surface" fx:id="cbSurface" mnemonicParsing="false" text="Include Surface Stations" />
                <CheckBox fx:id="cbLandingPad" mnemonicParsing="false" text="Include small pads" />
                <CheckBox fx:id="cbDemand" mnemonicParsing="false" selected="true" text="Allow 0 Demand" />
            </children>
        </VBox>
        <Button id="start" fx:id="btnStart" alignment="CENTER" contentDisplay="CENTER" onMouseClicked="#calculate" text="Get best trades" textAlignment="CENTER" visible="false">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
    </children>
    <stylesheets>
        <URL value="@../css/interaction.css" />
    </stylesheets>
</HBox>
