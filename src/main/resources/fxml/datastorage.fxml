<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<GridPane id="datastorage" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.fi0x.edct.controller.Datastorage" minWidth="220">
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints />
    </rowConstraints>
    <Label fx:id="lblDataAge" text="Local data age: ---" GridPane.rowIndex="0" GridPane.halignment="CENTER">
        <tooltip>
            <Tooltip text="The age of the least recently updated database entry"/>
        </tooltip>
    </Label>
    <Label fx:id="lblUpdateStatus" text="Initializing..." GridPane.rowIndex="1" GridPane.halignment="CENTER">
        <tooltip>
            <Tooltip text="This displays what happens in the background"/>
        </tooltip>
    </Label>
    <Button id="start" fx:id="btnStart" alignment="CENTER" contentDisplay="CENTER" onMouseClicked="#calculate" text="Reload Trades" textAlignment="CENTER" visible="false" GridPane.rowIndex="3" GridPane.halignment="CENTER">
        <tooltip>
            <Tooltip text="Re-loads the results, not the local database"/>
        </tooltip>
    </Button>
    <stylesheets>
        <URL value="@../css/datastorage.css"/>
    </stylesheets>
</GridPane>
