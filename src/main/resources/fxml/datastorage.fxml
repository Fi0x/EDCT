<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<GridPane id="datastorage" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.fi0x.edct.controller.Datastorage">
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints />
    </rowConstraints>
    <Label id="lblDataAge" fx:id="lblDataAge" text="Local data age: ---" GridPane.rowIndex="0" GridPane.halignment="CENTER">
        <tooltip>
            <Tooltip text="The age of the least recently updated database entry"/>
        </tooltip>
    </Label>
    <Label fx:id="lblUpdateStatus" text="Initializing..." GridPane.rowIndex="1" GridPane.halignment="CENTER">
        <tooltip>
            <Tooltip fx:id="ttBackgroundStatus" text="This displays what happens in the background"/>
        </tooltip>
    </Label>
    <Label fx:id="lblEDDNStatus" GridPane.rowIndex="2" GridPane.halignment="CENTER">
        <tooltip>
            <Tooltip text="This is shown when the program received an update over the EDDN"/>
        </tooltip>
    </Label>
    <Button id="start" fx:id="btnStart" onMouseClicked="#calculate" text="Reload Trades" visible="false" GridPane.rowIndex="4" GridPane.halignment="CENTER">
        <tooltip>
            <Tooltip text="Re-loads the results. Can also be done by changing a filter setting"/>
        </tooltip>
    </Button>
    <stylesheets>
        <URL value="@../css/datastorage.css"/>
    </stylesheets>
</GridPane>
